<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_robot">
    <!-- Updated Material: Blue -->
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>
    <!-- ... (previous properties) ... -->

    <!-- Base Link with BLUE color -->
    <link name="base_link">
        <visual>
             <geometry>
                <box size="${base_length} ${base_width} ${base_height}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <!-- ... -->
    </link>
    
    <!-- Gazebo Color Override -->
    <gazebo reference="base_link">
        <material>Gazebo/Blue</material>
    </gazebo>
    
    <!-- ... -->
</robot>
